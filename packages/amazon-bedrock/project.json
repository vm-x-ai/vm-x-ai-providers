{
  "name": "providers-amazon-bedrock",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/amazon-bedrock/src",
  "projectType": "library",
  "tags": ["providers", "amazon-bedrock"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "packages/amazon-bedrock/dist",
        "bundle": true,
        "main": "packages/amazon-bedrock/src/index.ts",
        "additionalEntryPoints": [],
        "tsConfig": "packages/amazon-bedrock/tsconfig.lib.json",
        "external": [],
        "thirdParty": true,
        "esbuildConfig": "packages/amazon-bedrock/esbuild.config.js",
        "generatePackageJson": false
      },
      "configurations": {
        "development": {},
        "production": {},
        "debug": {}
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {}
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx --yes @vm-x-ai/completion-provider publish",
        "cwd": "{projectRoot}"
      }
    }
  }
}
